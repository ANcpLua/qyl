<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <!-- CA1707: Underscores in test method names are an accepted convention -->
        <NoWarn>$(NoWarn);CA1707</NoWarn>
        <!-- Use beta package feed for latest analyzer testing packages -->
        <RestoreAdditionalProjectSources>https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet-tools/nuget/v3/index.json</RestoreAdditionalProjectSources>
    </PropertyGroup>

    <ItemGroup>
        <!-- Modern analyzer testing packages (beta) with latest Roslyn support -->
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="5.0.0" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="5.0.0" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Analyzer.Testing" Version="1.1.3-beta1.24352.1" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.CodeFix.Testing" Version="1.1.3-beta1.24352.1" />
        <PackageReference Include="Microsoft.CodeAnalysis.Testing.Verifiers.XUnit" Version="1.1.3-beta1.24352.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../../../eng/qyl.analyzers/qyl.analyzers.csproj"/>
    </ItemGroup>

</Project>
