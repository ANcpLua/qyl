    <ItemGroup>
        <PackageReference Include="ANcpLua.Roslyn.Utilities.Testing"/>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\src\qyl.Analyzers\qyl.Analyzers.csproj"/>
    </ItemGroup>
</Project>
