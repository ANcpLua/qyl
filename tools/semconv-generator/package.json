{
  "name": "@qyl/semconv-generator",
  "version": "1.0.0",
  "type": "module",
  "description": "Generate OTel Semantic Conventions for TypeScript, C#, and DuckDB",
  "scripts": {
    "generate": "tsx generate-semconv.ts",
    "generate:ts": "tsx generate-semconv.ts --ts-only",
    "generate:cs": "tsx generate-semconv.ts --cs-only",
    "generate:utf8": "tsx generate-semconv.ts --utf8-only",
    "generate:sql": "tsx generate-semconv.ts --sql-only",
    "deploy:dashboard": "cp output/semconv.ts ../../src/qyl.dashboard/src/lib/semconv.ts",
    "deploy:typespec": "cp output/semconv.g.tsp ../../core/specs/generated/semconv.g.tsp",
    "deploy:all": "npm run deploy:dashboard && npm run deploy:typespec",
    "validate:dashboard": "diff -q output/semconv.ts ../../src/qyl.dashboard/src/lib/semconv.ts",
    "validate:all": "npm run validate:dashboard",
    "ci": "npm run generate && npm run validate:all"
  },
  "devDependencies": {
    "@opentelemetry/semantic-conventions": "1.39.0",
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
