<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net10.0</TargetFrameworks>
    <LangVersion>14.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>

    <!-- BCL-only: Zero dependencies for netstandard2.0 -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IsAotCompatible Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net10.0'))">true</IsAotCompatible>
    <IsTrimmable Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net10.0'))">true</IsTrimmable>

    <!-- NuGet Package -->
    <PackageId>OTelConventions</PackageId>
    <Version>1.39.0</Version>
    <Authors>ANcpLua</Authors>
    <Description>OpenTelemetry Semantic Conventions as C# constants. Zero dependencies. Generated from @opentelemetry/semantic-conventions.</Description>
    <PackageTags>OpenTelemetry;OTel;Semantic Conventions;Telemetry;Observability</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/ANcpLua/ANcpLua.NET.Sdk</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ANcpLua/ANcpLua.NET.Sdk</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Package contents -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>