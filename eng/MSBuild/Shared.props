<Project>
  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- Shared property configurations for qyl                                  -->
  <!-- Automatically imported by Directory.Build.props                         -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <!-- OpenTelemetry GenAI Semantic Conventions version being targeted -->
  <PropertyGroup>
    <QylGenAiSemconvVersion>1.38</QylGenAiSemconvVersion>
  </PropertyGroup>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- Shared code injection flags                                             -->
  <!-- Set these to 'true' in your csproj to auto-include shared code          -->
  <!--                                                                         -->
  <!-- Example usage in a .csproj:                                             -->
  <!--   <PropertyGroup>                                                       -->
  <!--     <InjectSharedThrow>true</InjectSharedThrow>                         -->
  <!--   </PropertyGroup>                                                      -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <PropertyGroup>
    <!-- Inject src/Shared/Throw/*.cs - argument validation helpers -->
    <InjectSharedThrow Condition="'$(InjectSharedThrow)' == ''">false</InjectSharedThrow>

    <!-- Inject src/Shared/Telemetry/*.cs - telemetry helpers (future) -->
    <InjectSharedTelemetry Condition="'$(InjectSharedTelemetry)' == ''">false</InjectSharedTelemetry>
  </PropertyGroup>

  <!-- NuGet package defaults for qyl packages -->
  <PropertyGroup Condition="'$(IsPackable)' == 'true'">
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/ANcpLua/qyl-semconv-genai</PackageProjectUrl>
    <PackageReadmeFile Condition="Exists('$(MSBuildProjectDirectory)\README.md')">README.md</PackageReadmeFile>
  </PropertyGroup>

</Project>
