<Project>
  <!-- =======================================================================
       qyl Shared Properties - Imported by Directory.Build.props
       OTel configuration and qyl-specific settings
       Throw.cs provided by ANcpLua.NET.Sdk (Microsoft.Shared.Diagnostics)
       ======================================================================= -->

  <!-- OTel Configuration -->
  <PropertyGroup>
    <QylOTelEnabled Condition="'$(QylOTelEnabled)' == ''">true</QylOTelEnabled>
    <QylOTelSemConvVersion>1.38.0</QylOTelSemConvVersion>
    <QylJsonNamingPolicy>SnakeCaseLower</QylJsonNamingPolicy>
  </PropertyGroup>

  <!-- Global Usings for OTel -->
  <ItemGroup Condition="'$(QylOTelEnabled)' == 'true'">
    <Using Include="System.Diagnostics"/>
    <Using Include="System.Diagnostics.Metrics"/>
  </ItemGroup>

</Project>
