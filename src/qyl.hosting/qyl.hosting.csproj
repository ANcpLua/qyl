<Project Sdk="ANcpLua.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Library</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Qyl.Hosting</RootNamespace>
    <Description>GenAI-native application orchestration - the better AppHost</Description>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core hosting -->
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />

    <!-- Process management -->
    <PackageReference Include="CliWrap" />

    <!-- Health checks -->
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../qyl.protocol/qyl.protocol.csproj" />
  </ItemGroup>

</Project>
