<Project Sdk="ANcpLua.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <!-- netstandard2.0 defaults to C# 7.3, but we use modern features (required, init, file-scoped namespaces) -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>Qyl.ServiceDefaults.Generator</RootNamespace>

    <!-- Analyzer/Generator settings -->
    <IsRoslynComponent>true</IsRoslynComponent>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- AOT not supported for netstandard2.0 (required for Roslyn analyzer compatibility) -->
    <IsAotCompatible>false</IsAotCompatible>
    <EnableAotAnalyzer>false</EnableAotAnalyzer>

    <!-- ANcpLua.NET.Sdk features for source generators -->
    <!-- Inject all polyfills for netstandard2.0 (IsExternalInit, Index/Range, Nullable attrs, etc.) -->
    <InjectAllPolyfillsOnLegacy>true</InjectAllPolyfillsOnLegacy>
    <!-- Pin Roslyn to 5.0.0 for broad IDE/SDK compatibility (via SDK VersionOverride) -->
    <SourceGeneratorRoslynVersion>5.0.0</SourceGeneratorRoslynVersion>
    <!-- Enable C# 12 interceptors (auto-suppresses RSEXPERIMENTAL002) -->
    <UseInterceptors>true</UseInterceptors>
    <!-- RS1038: Transitive Workspaces reference via ANcpLua.Roslyn.Utilities - unavoidable for shared utilities -->
    <NoWarn>$(NoWarn);RS1038</NoWarn>
    <!-- Copy NuGet dependencies to output so transitive .targets can include them -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ANcpLua.Roslyn.Utilities"/>
  </ItemGroup>
</Project>
