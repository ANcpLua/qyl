<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Source generators need older Roslyn for broader IDE/SDK compatibility - opt out of CPM -->
    <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>
    <TargetFramework>netstandard2.0</TargetFramework>
    <!-- netstandard2.0 defaults to C# 7.3, but we use modern features (required, init, file-scoped namespaces) -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>Qyl.ServiceDefaults.Generator</RootNamespace>

    <!-- Analyzer settings -->
    <IsRoslynComponent>true</IsRoslynComponent>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- AOT not supported for netstandard2.0 (required for Roslyn analyzer compatibility) -->
    <IsAotCompatible>false</IsAotCompatible>
    <EnableAotAnalyzer>false</EnableAotAnalyzer>
    <!-- Suppress experimental Roslyn interceptor warnings -->
    <NoWarn>$(NoWarn);RSEXPERIMENTAL002</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="5.0.0" PrivateAssets="all"/>
    <PackageReference Include="ANcpLua.Roslyn.Utilities" Version="1.20.0" PrivateAssets="all"/>
  </ItemGroup>
</Project>
