<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <InvariantGlobalization>true</InvariantGlobalization>
    <PublishAot>true</PublishAot>
    <RootNamespace>qyl.collector</RootNamespace>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <!-- Inject shared code -->
    <InjectSharedThrow>true</InjectSharedThrow>
    <!-- Suppress analyzer rules for AOT/Native compilation and collector-specific patterns -->
    <!-- IL* rules: Native AOT trimming warnings (expected for AOT app) -->
    <!-- MA* rules: Meziantou rules not applicable to collector patterns -->
    <!-- VSTHRD*: Threading rules relaxed for collector's sync DuckDB operations -->
    <NoWarn>$(NoWarn);IL2026;IL3050;MA0004;MA0006;MA0011;MA0048;VSTHRD002;VSTHRD103;VSTHRD111</NoWarn>
  </PropertyGroup>

  <!-- DuckDB for embedded columnar storage -->
  <ItemGroup>
    <PackageReference Include="DuckDB.NET.Data"/>
    <!-- NetAnalyzers kept - rules managed via .editorconfig and NoWarn above -->
  </ItemGroup>

  <!-- OTLP protobuf ingestion -->
  <ItemGroup>
    <PackageReference Include="Google.Protobuf"/>
    <PackageReference Include="Grpc.AspNetCore"/>
    <PackageReference Include="OpenTelemetry.Api"/>
    <PackageReference Include="System.IO.Hashing"/>
  </ItemGroup>
  <ItemGroup>

  </ItemGroup>

  <!-- Core dependencies -->
  <ItemGroup>
    <ProjectReference Include="..\qyl.protocol\qyl.protocol.csproj"/>
  </ItemGroup>

</Project>
