<Project Sdk="ANcpLua.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <!-- SDK provides LangVersion, ImplicitUsings, Nullable for netstandard2.0 -->
    <!-- Enable polyfills for C# 14 language features (records, required, etc.) -->
    <InjectANcpLuaLanguageFeaturesPolyfills>true</InjectANcpLuaLanguageFeaturesPolyfills>
    <IsRoslynComponent>true</IsRoslynComponent>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <RootNamespace>qyl.instrumentation.generators</RootNamespace>
    <SourceGeneratorRoslynVersion>5.0.0</SourceGeneratorRoslynVersion>
    <!-- RS1032/RS2008: Internal generator, not published to NuGet - suppress analyzer release tracking -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" PrivateAssets="all"/>
  </ItemGroup>

  <!-- Analyzer release tracking (RS2008) -->
  <ItemGroup>
    <AdditionalFiles Include="AnalyzerReleases\AnalyzerReleases.Shipped.md"/>
    <AdditionalFiles Include="AnalyzerReleases\AnalyzerReleases.Unshipped.md"/>
  </ItemGroup>

</Project>
