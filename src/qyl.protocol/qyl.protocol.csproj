<Project Sdk="ANcpLua.NET.Sdk">

  <PropertyGroup>
    <!-- LEAF project - shared contracts between all qyl components -->
    <Description>Shared types and contracts for qyl AI Observability Platform</Description>
    <PackageId>Qyl.Protocol</PackageId>
    <Authors>ANcpLua</Authors>

    <!-- Suppress naming convention for intentional lowercase namespace -->
    <NoWarn>$(NoWarn);IDE1006</NoWarn>

    <!-- SDK injection features -->
    <InjectSharedThrow>true</InjectSharedThrow>
    <!-- Note: Inject*OnLegacy properties removed - not needed for net10.0 single-TFM -->

    <!-- AOT compatibility -->
    <IsAotCompatible>true</IsAotCompatible>

    <!-- CLAUDE.md v2 generation available - enable with GenerateClaudeMd=true -->
    <!-- Currently using hand-written CLAUDE.md (richer content) -->
  </PropertyGroup>

  <!-- BCL only - LEAF project has no external dependencies -->
  <!-- Microsoft.NET.ILLink.Tasks is implicitly provided by SDK when IsAotCompatible=true -->

</Project>
