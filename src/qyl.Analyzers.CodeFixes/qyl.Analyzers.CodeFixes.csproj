<Project Sdk="ANcpLua.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net10.0;netstandard2.0</TargetFrameworks>

    <IsPackable>false</IsPackable>
    <RootNamespace>Qyl.Analyzers</RootNamespace>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <NeutralLanguage>en</NeutralLanguage>

    <NoWarn>$(NoWarn);RS0030;CA1849;CA2249;IDE0055;CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="Microsoft.CodeAnalysis"/>
    <Using Include="Microsoft.CodeAnalysis.CSharp"/>
    <Using Include="Microsoft.CodeAnalysis.CSharp.Syntax"/>
    <Using Include="Microsoft.CodeAnalysis.CodeFixes"/>
    <Using Include="Microsoft.CodeAnalysis.CodeActions"/>
    <Using Include="Microsoft.CodeAnalysis.CodeRefactorings"/>
    <Using Include="System.Collections.Immutable"/>
    <Using Include="System.Composition"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ANcpLua.Roslyn.Utilities" PrivateAssets="all"/>
    <PackageReference Include="ANcpLua.Roslyn.Utilities.Polyfills" PrivateAssets="all"/>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" PrivateAssets="all"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\qyl.Analyzers\qyl.Analyzers.csproj"/>
  </ItemGroup>
</Project>
