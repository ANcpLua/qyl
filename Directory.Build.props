<Project>
  <!-- =======================================================================
       qyl Root Build Properties
       .NET 10.0 | C# 14 | Single-TFM | AOT-Compatible
       Uses ANcpLua.NET.Sdk for shared infrastructure
       ======================================================================= -->

  <!-- Central Package Management (native .NET 8+) -->
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <CentralPackageTransitivePinningEnabled>true</CentralPackageTransitivePinningEnabled>
  </PropertyGroup>

  <!-- Language & Framework -->
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>14.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <!-- SDK Configuration -->
  <PropertyGroup>
    <!-- We maintain our own CLAUDE.md files with @import inheritance -->
    <GenerateClaudeMd>false</GenerateClaudeMd>
    <!-- Throw.IfNull() etc. from SDK -->
    <InjectSharedThrow>true</InjectSharedThrow>
  </PropertyGroup>

  <!-- Quality -->
  <PropertyGroup>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>10.0</AnalysisLevel>
    <AnalysisMode>Recommended</AnalysisMode>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- RS0030/RS0031 removed: SDK BannedSymbols too strict for qyl currently -->
    <WarningsAsErrors>CA1816;CA2012;CA2016;VSTHRD100;VSTHRD002;VSTHRD003</WarningsAsErrors>
    <!-- Suppress SDK BannedSymbols until qyl code is migrated -->
    <NoWarn>$(NoWarn);RS0030;RS0031</NoWarn>
  </PropertyGroup>

  <!-- AOT -->
  <PropertyGroup>
    <IsAotCompatible>true</IsAotCompatible>
  </PropertyGroup>

  <!-- Packaging (default off) -->
  <PropertyGroup>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <!-- CI Detection -->
  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true' OR '$(TF_BUILD)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <!-- Import qyl-specific Props (OTel config, etc.) -->
  <Import Project="$(MSBuildThisFileDirectory)eng/MSBuild/Shared.props"/>

</Project>
